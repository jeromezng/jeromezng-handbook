.container-narrow.sign-in
  .sign-in-title
    Change Your Password
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put },  data: { turbo: false }) do |f|
    = render "devise/shared/error_messages", resource: resource
    = f.hidden_field :reset_password_token
    = f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New Password (6 or more characters)', class: 'form-control sign-in-field'
    = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm New Password', class: 'form-control sign-in-field'
    = f.submit "CHANGE PASSWORD", class: 'btn btn-primary sign-in-button'
  .sign-in-link
    or
    = link_to new_user_session_path do
      %strong Log In
    %br
    = link_to new_user_registration_path do
      Sign Up
  .sign-in-terms
    By signing up, logging in or continuing, I agree to JeromeZNg's <a href="/terms-of-use">Terms of Use</a> and <a href="/privacy-policy">Privacy Policy</a>.
